@page
@model BulkyWebRazor_Temp.Pages.Categories.CreateModel


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr/>
        </div>
        @* <div asp-validation-summary="ModelOnly"></div> *@
        @* modelOnly = displays validations related to model only, not those related to properties *@
        @* none = self explanatory (it will not diaplay any error msgs) *@
        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-0"></label>
            @* You dont need to write label name if you are using asp-for *@
            <input asp-for="Category.Name" class="form-control" />
            @* you dont need type in inputs if you are using asp-for *@
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            @* You dont need to write label name if you are using asp-for *@
            <input asp-for="Category.DisplayOrder" class="form-control" />
            @* you dont need type in inputs if you are using asp-for *@
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/categories/index" class="btn btn-outline-secondary border form-control">Back to List</a>
            </div>
        </div>
        
        
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}   
@* note: custom validations are not included. Like in this case: name and display order cannot be same.*@
